<Window x:Class="WpfApp3.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="PlayerWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Играть" Margin="5"/>
            <Button Content="Пвуза" Margin="5"/>
            <Button Content="Стоп" Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Сейчас играет:" FontWeight="Bold"/>
            <TextBlock Text="Название песни" Margin="5"/>
            <TextBlock Text="Артист" Margin="5"/>
            <TextBlock Text="Альбом" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
