<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Spotify" Height="400" Width="350" ResizeMode="CanMinimize">
    <Grid HorizontalAlignment="Left" Width="399" Margin="0,-38,0,0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="276" Width="299">
            <TextBox Text="Spotify" IsReadOnly="True" TextAlignment="Center" FontSize="24" Margin="20" FontWeight="Bold"/>
            <Button Content="Запустить" Command="{Binding OpenPlayerCommand}" Width="225" Margin="10" Foreground="White"/>
            <Button Content="Настройки" Command="{Binding OpenSettingsCommand}" Width="227" Margin="10" Foreground="White"/>
            <Button Content="Выход" Command="{Binding ExitCommand}" Width="230" Margin="10" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
